<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tipsfrag_bg"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/background_material_light"
    android:scrollbars="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/titulo" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tipsfrag_scrollableview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/titulo2" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/tipsfrag_scrollableview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>


</RelativeLayout>
