<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dummyfrag_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/background_material_light"
    android:scrollbars="vertical">

    <!-- Apodo -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewApodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/tituloApodo" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dummyfrag_scrollableviewApodo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>


    <!-- Clases -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/card_viewApodo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/titulo" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dummyfrag_scrollableview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>


    <!-- Informacion de ATK, DEF, MAG, DIF -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/tituloInfo" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dummyfrag_scrollableviewInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </android.support.v7.widget.CardView>


    <!-- Sabiduria -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_below="@+id/card_viewInfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_yellow_700"
                android:id="@+id/titulo2" />
        </LinearLayout>

        <!-- RecycleView donde se ingresa todo el contenido obtenido de la api -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dummyfrag_scrollableview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>

