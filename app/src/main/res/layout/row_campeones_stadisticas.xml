<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_small"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:theme="@style/ChampionListTheme">

    <ImageView
        android:id="@+id/image_campeon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/md_white_1000"/>

    <!-- Used for the ripple effect on touch -->
    <LinearLayout
        android:id="@+id/container_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/md_statusbar_translucent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_medium">
            <TextView
                android:id="@+id/label_role"
                style="@style/LabelNombre"
                android:text="Nombre"
                android:layout_width="140dp" />
            <TextView
                android:id="@+id/label_nombre_role"
                style="@style/LabelTitle"
                android:layout_below="@+id/label_role"
                android:text="Title"
                android:layout_width="140dp" />
            <TextView
                android:id="@+id/porcentaje"
                style="@style/LabelNombre"
                android:layout_toRightOf="@+id/label_nombre_role"
                android:text="Title" />
            <TextView
                android:id="@+id/label_porcentaje"
                style="@style/LabelNombre"
                android:layout_toRightOf="@+id/label_nombre_role"
                android:layout_below="@+id/porcentaje"
                android:text="Title" />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>